/* .k-p-signin-info */
.k-p-signin-info {background:#fff;}
.k-p-signin-info .topic {position:relative; height:375rpx; background:url(https://cdn.cnbj1.fds.api.mi-img.com/mi-mall/6a4b2a0a41b85c1669341f71993cab46.jpg); background-size:100% 100%;}
.k-p-signin-info .topic text {position:absolute; top:50%; left:0; width:100%; line-height:1.5; letter-spacing:1px; font-size:32px; font-weight:bold; color:#fff; -webkit-transform:translate(0, -50%); transform:translate(0, -50%); text-align:center;}
.k-p-signin-info .info {padding:8px 16px;}
.k-p-signin-info .info>view {margin:8px 0; font-size:16px;}
.k-p-signin-info .info>view label {color:#888;}
.k-p-signin-info .info .textgroup text {display:block; margin:8px auto;}
.k-p-signin-info .info .textgroup_ol text {position:relative; padding-left:20px;}
.k-p-signin-info .info .textgroup_ol text::before {position:absolute; top:0; left:0; width:16px; text-align:right;}
.k-p-signin-info .info .textgroup_ol text:nth-child(1)::before {content:'1.';}
.k-p-signin-info .info .textgroup_ol text:nth-child(2)::before {content:'2.';}
.k-p-signin-info .info .textgroup_ol text:nth-child(3)::before {content:'3.';}
.k-p-signin-info .info .textgroup_ol text:nth-child(4)::before {content:'4.';}
.k-p-signin-info .info .textgroup_ol text:nth-child(5)::before {content:'5.';}
.k-p-signin-info .info .textgroup_ol text:nth-child(6)::before {content:'6.';}
.k-p-signin-info .info .textgroup_ol text:nth-child(7)::before {content:'7.';}
.k-p-signin-info .info .textgroup_ol text:nth-child(8)::before {content:'8.';}
.k-p-signin-info .info .textgroup_ol text:nth-child(9)::before {content:'9.';}

/* .btn-sub */
.btn-sub {display:block; font-size:12px; color:#888; text-align:center;}
navigator.btn-sub {color:#576b95;}

/* .k-p-name-list */
.k-p-name-list .k-l-list__item radio {position:absolute; top:50%; right:16px; -webkit-transform:translate(0, -50%); transform:translate(0, -50%);}
.k-p-name-list .k-l-list__item text text {margin-left:8px; color:#888;}