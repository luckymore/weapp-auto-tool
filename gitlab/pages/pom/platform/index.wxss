@import '/pages/pom/detail/index.wxss';

/* .k-p-content */
.k-p-content .k-l-list__item {padding:12px 24px 12px 60px;}
.k-p-content .k-l-list__item .avatar {position:absolute; top:12px; left:12px; width:40px; height:40px; overflow:hidden; border-radius:5px; background-size:100% 100%;}
.k-p-content .k-l-list__item .type {position:absolute; top:64px; left:12px; width:40px; text-align:center;}
.k-p-content .k-l-list__item .type::before {font-family:'k-icon'; font-weight:normal; color:#888;}
.k-p-content .k-l-list__item .type_yes::before {content:'\e906';}
.k-p-content .k-l-list__item .type_no::before {content:'\e904';}
.k-p-content .k-l-list__item .nickname {color:#888;}
.k-p-content .k-l-list__item .content {margin-top:4px;}
.k-p-content .k-l-list__item .content text {display:block; text-align:justify;}
.k-p-content .k-l-list__item .bot {margin-top:8px; font-size:12px; color:#888;}