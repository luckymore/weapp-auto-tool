/* .k-p-panel */
.k-p-panel {padding:0 16px; height:32px; line-height:32px; font-size:12px; color:#888; background:#fafafa; overflow: hidden;}
.k-p-panel text {float:left;}
.k-p-panel .time {float:left; padding:0 16px; position: relative;}
.k-p-panel .time::after {content:'\e900'; font-family:'k-icon'; position: absolute; right:2px; top: 0; margin-left:4px;}
.k-p-panel .koubei {float:right;}
.k-p-panel .koubei::before {content:'\e904'; font-family:'k-icon'; float:left; margin-right:4px;}

/* .k-p-rank */
/* .k-p-rank .k-l-list__item {padding:12px; font-size:14px;} */
.k-p-rank__item {position:relative; overflow:auto; padding-left: 30px;}
.k-p-rank__item text {float:left; margin-right:6px; width:24px; font-style:italic; color:#b2b2b2;}
.k-p-rank__item text.i {position:absolute; top:50%; left:0; width:24px; font-size:14px; font-style:italic; color:#b2b2b2; -webkit-transform:translate(0, -50%); transform:translate(0, -50%);}
.k-p-rank__item text.i_sticktop {top:0; transform:rotateX(180deg);}
.k-p-rank__item text.i_sticktop::before {content:'\e905'; font-family:'k-icon'; font-style:normal;}
.k-p-rank__item text.i_top3 {font-weight:900; color:#ff4a00;}
.k-p-rank__item .keyword {float:left;}
.k-p-rank__item .icon {position:absolute; top:50%; right:0; color:#888; font-size:14px; -webkit-transform:translate(0, -50%); transform:translate(0, -50%);}
.k-p-rank__item .icon::before {float:left; margin-right:6px; font-family:'k-icon'; color:#b2b2b2;}
.k-p-rank__item .icon_hot::before { content:'\e9a9';}
.k-p-rank__item .icon_up::before { content:'\e914';}
.k-p-rank__item .icon_down::before { content:'\e913';}
.k-p-rank__item .icon_yes::before { content:'\e906';}
.k-p-rank__item .icon_no::before { content:'\e904';}

/* .k-p-admin-btn */
.k-p-admin-btn {padding:8px; font-size:14px; color:#888; text-align:center;}
.k-p-admin-btn>view {display:inline-block;}
.k-p-admin-btn>view navigator {float:left; margin:0 16px;}
.k-p-admin-btn>view navigator::before {float:left; font-family:'k-icon'; margin-right:4px;}
.k-p-admin-btn>view navigator:nth-child(1)::before {content:'\e918';}
.k-p-admin-btn>view navigator:nth-child(2)::before {content:'\e910';}